<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:focusableInTouchMode="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:tint="@color/colorGrey"
            android:gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:id="@+id/visibility"
            android:src="@drawable/ic_visibility"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:hint="@string/indique_que_le_cours_est_visible_par_l_tudiant"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/colorSwipeBlue"
                android:gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:id="@+id/swapVisibility"
                android:src="@drawable/ic_visibility"/>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:hint="@string/changer_la_visibilit_du_cours"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/colorSwipeRed"
                android:gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:id="@+id/swapDelete"
                android:src="@drawable/ic_delete"/>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:hint="@string/supprimer_le_cours"/>

    </LinearLayout>

</ScrollView>