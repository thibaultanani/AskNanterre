<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="60px"
        android:text="LA QUESTION"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Les réponses prédéfinies"/>

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:entries="@array/number_arrays"
        android:prompt="@string/number_prompt"
        android:spinnerMode="dropdown" />

    <TextView
        android:id="@+id/ltext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:hint="Ecrivez une réponse qui sera envoyée aux étudiants"/>

    <EditText
        android:id="@+id/lname"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="top"
        android:background="@drawable/edittext_bg"
        android:hint="Votre réponse"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right">

        <Button
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="Annuler"
            android:id="@+id/button2"
            android:onClick="annuler"
            android:background="@drawable/mybutton2"
            android:textColor="#ffffff"
            android:drawableStart="@drawable/ic_arrow"/>

        <Button
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/button2"
            android:text="Valider"
            android:id="@+id/button"
            android:onClick="valider"
            android:background="@drawable/mybutton2"
            android:textColor="#ffffff"
            android:drawableStart="@drawable/ic_arrow"/>

    </RelativeLayout>


</LinearLayout>